<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputText"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="361dp"
        android:layout_height="48dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="100dp"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="#E8EFF6"
        android:hint="Digite algo..."

        android:inputType="text"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textarea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textarea"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="368dp"
        android:layout_height="230dp"
        android:layout_marginTop="88dp"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="#E8EFF6"
        android:hint="Espere a resposta"

        android:inputType="textMultiLine"
        android:lines="11"

        android:overScrollMode="always"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textColorHint="#050505"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputText" />

    <Button
        android:id="@+id/buttonbot"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#E8EFF6"
        android:text="Bot"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textarea" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="165dp"
        android:layout_height="137dp"
        app:layout_constraintBottom_toTopOf="@+id/inputText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095"
        app:srcCompat="@drawable/chatboticone3" />

</androidx.constraintlayout.widget.ConstraintLayout>